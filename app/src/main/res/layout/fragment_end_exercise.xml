<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.endexercise.EndExerciseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/resultTextView"
            android:text="@string/well_done_champ" />

        <TextView
            android:id="@+id/timeResultTV"
            style="@style/exerciseTextView"
            android:text="@string/mins_seconds" />

        <TextView
            android:id="@+id/distanceResultTV"
            style="@style/exerciseTextView"
            android:text="@string/km"/>

        <TextView
            android:id="@+id/caloriesResultTV"
            style="@style/exerciseTextView"
            android:text="@string/calories"/>

        <TextView
            android:id="@+id/stepsResultTV"
            style="@style/exerciseTextView"
            android:text="@string/steps"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>